generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Listing {
    id          String   @id @default(uuid())
    name        String
    description String
    area        String
    city        String
    html        String
    userId      String
    createdAt   DateTime @default(now())
    Image       Image[]

    @@unique([id, userId])
}

model Image {
    id        String   @id @default(uuid())
    url       String
    listing   Listing  @relation(fields: [listingId], references: [id])
    listingId String
    createdAt DateTime @default(now())
}
